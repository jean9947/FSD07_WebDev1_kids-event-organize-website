<html>
  <head>
    <link rel="stylesheet" href="/style.css"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway%3A300%2C400%2C500%2C600%2C700%7CBaloo+Chettan%3A300%2C400%2C500%2C600%2C700%7CAmatic+SC%3A300%2C400%2C500%2C600%2C700&subset=latin-ext%2Cgreek%2Cgreek-ext&ver=1.0.0"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <title>Playroom-{% block title %}Submit Form{% endblock %}</title>
  </head>
  <body>

    {% if errorList %}
        <ul>
        {% for error in errorList %}
            <li>{{ error }}</li>
        {% endfor %}
        </ul>
    {% endif %}



    <form method="POST" action="/admin/addevent" id="form">
    <h3>Add Event</h3><br />
        <label id="eventId">Event ID</label><br />
        <input  type="text" name="eventId" value="{{ v.eventId }}" required /><br /><br />
        <label id="userId">User ID</label><br />
        <input  type="text" name="userId" value="{{ v.userId }}" required /><br /><br />
        <label id="childId">Child ID</label><br />
        <input  type="text" name="childId" value="{{ v.childId }}" required /><br /><br />
        <button type="submit">Add</button>
        <button type="reset" id="cancelbtn">Cancel</button><br>
    </form>

    <script>
    $('#cancelbtn').click(function() {
        $('#addUser-form-container').empty();
        $('#btnAddUser').show(); 
    });
    </script>

  </body>
</html>
{% extends "master.html.twig" %}
{% block title %} Password Reset Request{% endblock %}
{% block content %}

{% if errorList %}
    <ul>
    {% for error in errorList %}
        <li>{{ error }}</li>
    {% endfor %}
    </ul>
{% endif %}


<form method="POST" enctype = "multipart/form-data" id="form">
<h3>Password Reset Request</h3><br/>
  <label id="email">Your Email</label><br />
  <input  type="email" name="email" value="{{ v.email }}" required /><br /><br />
  <label id="email2">Confirm Your Email</label><br />
  <input  type="email" name="email2" value="{{ v.email2 }}" required /><br /><br />
  <input type="submit" id="submit" value="Submit">
</form>


{% endblock content %}

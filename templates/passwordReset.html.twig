{% extends "master.html.twig" %}
{% block title %} Reset Password{% endblock %}
{% block content %}

{% if errorList %}
    <ul>
    {% for error in errorList %}
        <li>{{ error }}</li>
    {% endfor %}
    </ul>
{% endif %}


<form method="POST" enctype = "multipart/form-data" id="form">
<h3>Reset Password</h3><br/>
  <label id="email">Your Email</label><br />
  <input  type="email" name="email" value="{{ v.email }}" required /><br /><br />
  <label id="password1">New Password</label><br />
  <input  type="password" name="password1" value="{{ v.password1 }}" required /><br /><br />
  <label id="password2">Comfirm Password</label><br />
  <input  type="password" name="password2" value="{{ v.password2 }}" required /><br /><br />
  <input type="submit" id="submit" value="Reset">
</form>


{% endblock content %}
